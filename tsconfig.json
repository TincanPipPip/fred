  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./wp-content/themes/fred/dist"
  },
  "files": ["./wp-content/themes/fred/assets/types/index.d.ts"],
