{% if post.thumbnail.src %}
  <div class="m-banner m-banner--page" role="banner">

    <div class="grid justify-end">
      <div class="col-sm-11 col-bleed-y">

        {% set imageXs = post.thumbnail.src|resize('400','300') %}
        {% set imageSm = post.thumbnail.src|resize('800','417') %}
        {% set imageMd = post.thumbnail.src|resize('1100','573') %}
        {% set imageBg = post.thumbnail.src|resize('1920','1000') %}

        <picture>
          <source media="(max-width: 400px)" data-srcset="{{ imageXs }}" type="image/jpeg">
          <source media="(max-width: 800px)" data-srcset="{{ imageSm }}" type="image/jpeg">
          <source media="(max-width: 1100px)" data-srcset="{{ imageMd }}" type="image/jpeg">
          <img data-src="{{ imageBg }}" alt="{{ post.thumbnail.alt }}" class="lazy" />
        </picture>

        {% include "/atoms/image-credit.twig" with {
          credit: post.thumbnail.caption
        } %}

      </div>
    </div>

  </div>
{% endif %}