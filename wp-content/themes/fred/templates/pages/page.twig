{% extends "/layout/base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}" data-template="page.twig">

    {% include "/molecules/banner.twig" %}
      
    <h1>{{ post.title }}</h1>

    {% if post.get_field("teaser_section") %}
      <h1>keep</h1>
      {% include "/organisms/teaser-section.twig" %}
    {% endif %}
  
    <aside class="o-page__col o-page__right">
      {{ subnav }}
    </aside>

	</article>
{% endblock %}
