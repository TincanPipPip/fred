{
  "name": "fred",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/TincanPipPip/fred"
  },
  "description": "Fred theme tools",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "mix",
    "production": "mix --production",
    "start": "mix watch",
    "cypress": "export NODE_ENV=development && cypress open",
    "test": "jest",
    "test:watch": "jest --watch",
    "kill": "killall webpack"
  },
  "eslintConfig": {
    "extends": [
      "wesbos",
      "wesbos/typescript.js"
    ],
    "rules": {
      "@typescript-eslint/no-unsafe-assignment": 0,
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 10,
            "browsers": [
              "last 2 chrome versions",
              "last 2 firefox versions",
              "last 2 safari versions",
              "last 2 edge versions"
            ]
          }
        }
      ],
      "@babel/preset-react",
      "@babel/preset-typescript",
      "react-app"
    ]
  },
  "dependencies": {
    "@vimeo/player": "^2.20.1",
    "axios": "^0.21.1",
    "babel-preset-react-app": "^10.0.1",
    "baguettebox.js": "^1.11.1",
    "cypress-axe": "^0.12.2",
    "focus-trap": "^7.5.4",
    "focus-trap-js": "^1.1.0",
    "focus-visible": "^5.2.0",
    "focus-within": "^3.0.2",
    "include-media": "^1.4.9",
    "jest": "^26.6.3",
    "js-cookie": "^2.2.1",
    "normalize.scss": "^0.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-loader-spinner": "^5.4.5",
    "react-loaders": "^3.0.1",
    "reflex-grid": "^2.0.4",
    "ts-jest": "^26.5.4",
    "van11y-accessible-accordion-aria": "^3.0.1",
    "vanilla-lazyload": "^17.3.1",
    "zenscroll": "^4.0.2"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.17",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/focus-within": "^1.0.0",
    "@types/js-cookie": "^2.2.6",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/zenscroll": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "babel-eslint": "10.1.0",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^7.0.0",
    "cypress": "^6.5.0",
    "cypress-axe": "^0.12.2",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-wesbos": "^1.0.1",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "laravel-mix": "^6.0.11",
    "laravel-mix-glob": "^1.1.9",
    "postcss": "^8.2.6",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "./testsConfig.ts"
    ]
  }
}
